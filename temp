<dependencies>
    <!-- Spring Web Services Core for Jaxb2Marshaller and WebServiceTemplate -->
    <dependency>
        <groupId>org.springframework.ws</groupId>
        <artifactId>spring-ws-core</artifactId>
        <version>3.1.1</version> <!-- Check for the latest version -->
    </dependency>

    <!-- JAXB API (needed for marshalling/unmarshalling) -->
    <dependency>
        <groupId>jakarta.xml.bind</groupId>
        <artifactId>jakarta.xml.bind-api</artifactId>
        <version>3.0.1</version> <!-- Adjust to latest version -->
    </dependency>

    <!-- JAXB Runtime (the actual implementation for JAXB functionality) -->
    <dependency>
        <groupId>org.glassfish.jaxb</groupId>
        <artifactId>jaxb-runtime</artifactId>
        <version>3.0.1</version>
    </dependency>
</dependencies>
