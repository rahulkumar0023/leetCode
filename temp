        String processedPgpKey = "processed/" + base + ".zip.pgp";
        String processedZipKey = "processed/" + base + ".zip";
        String failedPgpKey    = "failed/"   + base + ".zip.pgp";
        String failedZipKey    = "failed/"   + base + ".zip";

        try {
