    .<Object, Object>chunk(10)
    .reader(xmlReader)
    .writer(xmlWriter)
    .faultTolerant()
    .skip(BadXmlException.class)
    .skipLimit(Integer.MAX_VALUE)
    .listener(skipLoggingListener)
    .build();
